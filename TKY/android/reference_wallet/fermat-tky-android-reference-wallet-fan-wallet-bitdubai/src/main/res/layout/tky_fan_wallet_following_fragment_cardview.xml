<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/tky_following_card_view"
    card_view:cardBackgroundColor="@android:color/transparent"
   >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        >

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:layout_above="@+id/linea"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/followingtabdescriptioncolor"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/url"
            android:layout_below="@+id/artistname"
            android:layout_alignLeft="@+id/artistname"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/followingtabartistnamecolor"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Large Text"
            android:id="@+id/artistname"
            android:layout_toRightOf="@+id/imagen"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:foregroundTint="#000000"
            android:textSize="18sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/linea"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="true"
            android:background="#ffffff"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

        </View>



    </RelativeLayout>
</android.support.v7.widget.CardView>